$wine = #AF1866
$purple = #AE81FF
$light-blue = #D2E0EC
$blue = #1A69B5
$dark-blue = #303050
$teal = #138684

$tan = #E6DB74

$pink = #FF0080

$grey = #333

//$blue = #5472A0

$green = #1BBB68
$red = #A52117
$orange = #FF7000

@media (any-hover: none)
  .editor-controls
    display none

ractive-player.editor
  background-color #134E86
  
.coordinates-box
  background-color #FFC
  color #000
  padding 2px
  position absolute
  left 0
  top 0
  z-index 10000

.editor-controls > *
  display inline-block
  height 100%

.rp-controls-slidename 
  overflow hidden
  text-align left
  width 10em

.rp-audio-progress, .rp-controls-slidename, .rp-duration
  display inline-block
  font-family "Roboto Slab", sans-serif
  line-height 36px
  padding 0 4px
  text-align center
  vertical-align top

/* recorder */
#editor-objects-thing
  position relative
  
  text
    user-select none
    -moz-user-select none

#saved-thumbs-dialog, #editor-objects-dialog
  background-color #2A2A2A
  border-radius 2px 2px 0 0
  box-shadow 2px -2px 2px 2px rgba(0, 0, 0, 0.3)
  box-sizing border-box
  
  position absolute
  bottom 42px
  
  padding .5em
  
  > button
    background-color $red
    border 0 none transparent
    box-sizing border-box
    color #FFF
    font-family "Roboto Slab", sans-serif
    font-size 1em
    margin-top .5em
    padding .25em
    
#editor-objects-dialog
  right 0
  min-width 15vw
  
#editor-objects-editing-dialog
  background #444
  border-radius 0 2px 2px 0
  left 100%
  position absolute
  padding .5em
  top 0
  
.idmap-selected
  background #FFF
  border 1px solid #1A69B5
  border-collapse collapse
  box-shadow 0 0 1px #000 inset
  color #333
  display block
  font-family monospace
  margin 0
  max-height 10em
  overflow-y auto
  width 100%
  
  > tbody > tr > *
    padding 2px
    
  > tbody > tr:not(:last-child) > *
    border-bottom 1px dotted $blue
    
  td
    white-space nobreak
    
  span
    background #999
    border-radius 100%
    color #FFF
    display inline-block
    float right
    font-family "Alegreya"
    font-style italic
    height 1em
    line-height .8em
    margin-left .5em
    padding 2px
    text-align center
    user-select none
    -moz-user-select none
    width 1em

#sheets a
  display block

#editor-recorder
  position relative

#editor-recorder-dialog
  background-color #2A2A2A
  border-radius 2px 2px 0 0
  box-shadow 2px -2px 2px 2px rgba(0, 0, 0, 0.3)
  box-sizing border-box
  color #FFF
  font-family "Roboto Slab", sans-serif
  
  position absolute
  bottom 42px
  right 0
  z-index 3
  
  max-height 40vmin
  overflow-y auto
  padding .5em
  width 42.5vmin
  
  > h3
    color $blue
    margin .5em 0 .2em

#editor-recorder-commands
  th, td
    vertical-align bottom
  
  th
    font-size 1.1em
    
  td
    font-size .9em
    padding-left 1em
  
  kbd
    color yellow

/* configuration */
.recorder-plugin
  display inline-block
  font-family "Helvetica", "Arial", sans-serif
  font-size .7em
  margin 0 .25em
  text-align center
  
.recorder-plugin-icon
  border-radius 5px
  cursor pointer
  display block
  margin-bottom 1px
  
  background-color #222
  
  &.active
    background-color #F00
    
  text
    user-select none
    -moz-user-select none

/* saved recordings */
.recordings
  font-size 1.5em
  list-style-position inside

.recording-results
  border-collapse collapse
  font-size 0.6em
  width 100%
  
  > tbody > tr
    background-color #333
    
    > th
      padding 6px
      width 36px
    
    > td
      padding 6px
    
  textarea
    width 100%

  :link
    background-color $blue
    box-sizing border-box
    color #FFF !important
    display block
    padding .5em
    text-align center
    text-decoration none
    width 100%
    
.re-audio-delay
  font-family monospace
  display block
  white-space pre

#rpe-color-palette
  color #000
  position absolute
  bottom 0
  left 16%//unquote("calc(50% - 1.5em * 10)")
  z-index 3000
  text-align center

#rpe-color-palette > span
  height 1.5em
  width 1.5em
  line-height 1.5em
  font-size 2em
  display inline-block
  